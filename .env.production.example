# ============================================
# 生产环境变量配置
# ============================================

# 基础配置
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://pulseopti-hr.vercel.app
NEXT_PUBLIC_APP_NAME=PulseOpti HR 脉策聚效
NEXT_PUBLIC_APP_DESCRIPTION=企业人力资源管理SaaS平台

# 数据库配置 (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 对象存储配置 (S3 Compatible)
S3_ENDPOINT=https://s3.example.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=pulseopti-hr
S3_REGION=us-east-1

# AI 服务配置
DOUBAO_API_KEY=your-doubao-api-key
DOUBAO_API_BASE=https://ark.cn-beijing.volces.com/api/v3

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@pulseopti-hr.com
SMTP_PASS=your-smtp-password
SMTP_FROM=PulseOpti HR <noreply@pulseopti-hr.com>

# 短信服务配置
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SIGN_NAME=PulseOptiHR

# 监控和日志
LOG_LEVEL=info
ENABLE_METRICS=true

# 速率限制
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# 文件上传限制
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 会话配置
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=604800000

# Vercel 特定配置
VERCEL_URL=pulseopti-hr.vercel.app
